package com.test.classes;

import java.util.*;

public class CloseAddress {

	public static void main(String[] args) {
		String nAdd = "";

		Scanner sc = new Scanner(System.in);
		System.out.println("Please enter no. of M addresses");
		int m = sc.nextInt();
		String[] mAddress = new String[m];

		for (int i=0;i<m;i++) {
			String add = sc.next();
			mAddress[i]=add;
		}
		System.out.println("Please enter New Address");
		nAdd = sc.next();
		
//		for (int i=0;i<m;i++) {
//			System.out.println(mAddress[i]);
//		}
//		System.out.println(nAdd);
		
		List<Set> mAddressSet = getMAddressSet(mAddress);
		
	}

	private static List<Set> getMAddressSet(String[] mAddress) {
		List<Set> mAddressSet = new ArrayList<Set>();
		Set<String> adSet = null;
		String[] addSplits = null;
		for (int i=0 ; i<mAddress.length ; i++) {
			String add = mAddress[i];
			addSplits = add.split(",");
			adSet = new HashSet<String>();
			for (int j=0;j<=addSplits.length;j++) {
				adSet.add(addSplits[j].trim().toLowerCase());
			}
			mAddressSet.add(adSet);
			System.out.println(adSet.toString());
		}
		return mAddressSet;
	}

}
